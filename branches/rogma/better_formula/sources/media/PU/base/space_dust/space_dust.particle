// Space dust to show speed
PU/base/SpaceDust
{
    material PU/base/SpaceDust
    particle_width 0.0001
    particle_height 0.0001
    cull_each true
    quota 3000
    billboard_type point

    // Area emitter
    emitter Box
    {
        width 100
        height 100
        depth 0
        emission_rate 200
        time_to_live 2
        velocity_min 0
        velocity_max 0
        direction 0 0 1
        position 0 0 -100
    }
}